{
  "$schema": "http://json.schemastore.org/template",
  "author": "Muskan Kumari",
  "classifications": ["Web", "Service", "Clean Architecture", "Microservice"],
  "identity": "CleanArchitecture.Template",
  "name": "Clean Architecture Microservice Solution",
  "shortName": "cleanarch",
  "sourceName": "Template",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "description": "A production-ready Clean Architecture based Microservice template for .NET.",
  "defaultName": "CleanArchService",
  "primaryOutputs": [{ "path": "Template.sln" }],
  "symbols": {
    "ServiceName": {
      "type": "parameter",
      "datatype": "string",
      "description": "Name of your service (e.g. Order, Basket, Catalog)",
      "replaces": "__ServiceName__",
      "defaultValue": "Service"
    },
    "Framework": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Target .NET version",
      "choices": [
        { "choice": "net6.0", "description": "Use .NET 6 LTS" },
        { "choice": "net7.0", "description": "Use .NET 7 (Standard-Term)" },
        { "choice": "net8.0", "description": "Use .NET 8 LTS (Recommended)" }
      ],
      "defaultValue": "net8.0",
      "replaces": "net8.0"
    },
    "TemplateVersion": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy.MM.dd"
      },
      "replaces": "__TemplateVersion__"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".template.config/**",
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            "**/.git/**",
            "**/.vs/**"
          ]
        }
      ]
    }
  ],
  "icon": "Icon2.png",
  "preferDefaultName": true,
  "symbolsFolder": ".template.config/symbols",
  "guids": [
    "11111111-1111-1111-1111-111111111111",
    "22222222-2222-2222-2222-222222222222"
  ]
}
